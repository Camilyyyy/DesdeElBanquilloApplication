@model DesdeElBanquilloApplication.ViewModels.LeagueViewModel
<h1>Detalles de Liga</h1>
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CreatedDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.CreatedDate)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsActive)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.IsActive)</dd>

    <dt class="col-sm-2">País</dt>
    <dd class="col-sm-10">@Model.CountryName</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.IdLeague" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>