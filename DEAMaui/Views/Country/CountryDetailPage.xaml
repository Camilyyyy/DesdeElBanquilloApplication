<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             x:DataType="viewmodel:CountryDetailViewModel"
             x:Class="DEAMaui.Views.Country.CountryDetailPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Nombre del País" FontSize="Small"/>
            <Frame Padding="10,0" CornerRadius="5" BorderColor="LightGray">
                <Entry Text="{Binding Country.Name}" 
                       Placeholder="Ej. España"
                       FontSize="Medium"/>
            </Frame>

            <Button Text="Guardar" 
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    HorizontalOptions="Fill"
                    Margin="0,20,0,0"/>

            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>