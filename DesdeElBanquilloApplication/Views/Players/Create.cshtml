@model DEAModels.Player

@{
    ViewData["Title"] = "Crear Jugador";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #b2fefa, #f9f9f9, #fbc2eb);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Crear Jugador
</h1>

<!-- FORMULARIO CON ESTILO -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Age" class="form-label">Edad</label>
                <input asp-for="Age" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="JerseyNumber" class="form-label">Número de Camiseta</label>
                <input asp-for="JerseyNumber" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="JerseyNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MarketValue" class="form-label">Valor de Mercado</label>
                <input asp-for="MarketValue" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="MarketValue" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="BirthDate" type="date" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Height" class="form-label">Altura (cm)</label>
                <input asp-for="Height" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Weight" class="form-label">Peso (kg)</label>
                <input asp-for="Weight" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdTeam" class="form-label">Equipo</label>
                <select asp-for="IdTeam" class="form-control" asp-items="ViewBag.IdTeam" style="border-radius: 8px;"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdPosition" class="form-label">Posición</label>
                <select asp-for="IdPosition" class="form-control" asp-items="ViewBag.IdPosition" style="border-radius: 8px;"></select>
            </div>

            <div class="form-group mb-4">
                <label asp-for="IdCountry" class="form-label">País</label>
                <select asp-for="IdCountry" class="form-control" asp-items="ViewBag.IdCountry" style="border-radius: 8px;"></select>
            </div>

            <div class="text-center">
                <button type="submit" class="create-btn">
                    <i class="fas fa-check-circle me-2"></i> Crear Jugador
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left me-1"></i> Volver a la lista</a>
        </div>
    </div>
</div>

<!-- VALIDACIÓN -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .create-btn {
        background: linear-gradient(to right, #ffecd2, #fcb69f);
        color: #1f3c88;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .create-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #fcb69f, #ffecd2);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }

    label {
        font-weight: 500;
    }

    .form-control:focus {
        border-color: #fcb69f;
        box-shadow: 0 0 0 0.2rem rgba(252, 182, 159, 0.25);
    }
</style>
