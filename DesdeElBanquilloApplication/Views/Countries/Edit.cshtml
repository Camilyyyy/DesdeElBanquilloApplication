@model DEAModels.Country

@{
    ViewData["Title"] = "Editar País";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #b2fefa, #f9f9f9, #fbc2eb);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Editar País
</h1>

<!-- FORMULARIO DE EDICIÓN -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdCountry" />

            <div class="form-group mb-4">
                <label asp-for="Name" class="form-label">Nombre del País</label>
                <input asp-for="Name" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="edit-btn">
                    <i class="fas fa-save me-2"></i> Guardar Cambios
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left me-1"></i> Volver al listado
            </a>
        </div>
    </div>
</div>

<!-- SCRIPTS DE VALIDACIÓN -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .edit-btn {
        background: linear-gradient(to right, #d4fc79, #96e6a1);
        color: #1f3c88;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .edit-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #96e6a1, #d4fc79);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
