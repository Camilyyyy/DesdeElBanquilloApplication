@model DEAModels.Stadium

@{
    ViewData["Title"] = "Eliminar Estadio";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #b2fefa, #f9f9f9, #fbc2eb);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Eliminar Estadio
</h1>

<!-- CONFIRMACIÓN -->
<div class="row justify-content-center">
    <div class="col-md-8 p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">

        <h5 class="text-center mb-4 text-danger">¿Estás seguro de que deseas eliminar este estadio?</h5>

        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">Fecha de Fundación</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FoundedDate)</dd>

            <dt class="col-sm-4">Capacidad</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>

            <dt class="col-sm-4">Equipo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Team.Name)</dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-4">
            <input type="hidden" asp-for="IdStadium" />

            <button type="submit" class="delete-btn me-3">
                <i class="fas fa-trash-alt me-1"></i> Eliminar
            </button>

            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left me-1"></i> Volver al listado
            </a>
        </form>
    </div>
</div>

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .delete-btn {
        background: linear-gradient(to right, #ffcccc, #ff8888);
        color: #8a0303;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .delete-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #ff8888, #ffcccc);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
