@model DEAModels.Position

@{
    ViewData["Title"] = "Eliminar Posición";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #fbc2eb, #f9f9f9, #b2fefa);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Eliminar Posición
</h1>

<!-- CONFIRMACIÓN -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <h5 class="text-danger fw-bold mb-3 text-center">¿Estás seguro de que deseas eliminar esta posición?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Nombre de la Posición</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="IdPosition" />
                <button type="submit" class="delete-btn">
                    <i class="fas fa-trash-alt me-1"></i> Eliminar
                </button>
                <a asp-action="Index" class="back-link ms-3">
                    <i class="fas fa-arrow-left me-1"></i> Volver al listado
                </a>
            </form>
        </div>
    </div>
</div>

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .delete-btn {
        background: linear-gradient(to right, #f5576c, #f093fb);
        color: white;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .delete-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #f093fb, #f5576c);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
