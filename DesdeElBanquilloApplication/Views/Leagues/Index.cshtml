@model IEnumerable<DesdeElBanquilloApplication.ViewModels.LeagueViewModel>
@{
    ViewData["Title"] = "Ligas";
}
<h1>Ligas</h1>
<p><a asp-action="Create" class="btn btn-success btn-lg">Crear nueva</a></p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.CreatedDate)</th>
            <th>@Html.DisplayNameFor(m => m.IsActive)</th>
            <th>País</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Name)</td>
                <td>@Html.DisplayFor(_ => item.CreatedDate)</td>
                <td>@Html.DisplayFor(_ => item.IsActive)</td>
                <td>@item.CountryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdLeague" class="btn btn-sm btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdLeague" class="btn btn-sm btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdLeague" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>