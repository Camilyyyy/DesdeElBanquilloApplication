@model DEAModels.Match

@{
    ViewData["Title"] = "Crear Partido";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #b2fefa, #f9f9f9, #fbc2eb);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Crear Partido
</h1>

<!-- FORMULARIO -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="MatchDate" class="form-label">Fecha del Partido</label>
                <input asp-for="MatchDate" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="HomeGoals" class="form-label">Goles Local</label>
                <input asp-for="HomeGoals" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="HomeGoals" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AwayGoals" class="form-label">Goles Visitante</label>
                <input asp-for="AwayGoals" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="AwayGoals" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label">Estado del Partido</label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<MatchStatus>()" class="form-control" style="border-radius: 8px;">
                    <option value="">Seleccione un estado</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Referee" class="form-label">Árbitro</label>
                <input asp-for="Referee" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Referee" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdHomeTeam" class="form-label">Equipo Local</label>
                <select asp-for="IdHomeTeam" class="form-control" asp-items="ViewBag.IdHomeTeam" style="border-radius: 8px;"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdAwayTeam" class="form-label">Equipo Visitante</label>
                <select asp-for="IdAwayTeam" class="form-control" asp-items="ViewBag.IdAwayTeam" style="border-radius: 8px;"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdCompetition" class="form-label">Competencia</label>
                <select asp-for="IdCompetition" class="form-control" asp-items="ViewBag.IdCompetition" style="border-radius: 8px;"></select>
            </div>

            <div class="form-group mb-4">
                <label asp-for="IdStadium" class="form-label">Estadio</label>
                <select asp-for="IdStadium" class="form-control" asp-items="ViewBag.IdStadium" style="border-radius: 8px;"></select>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="create-btn">
                    <i class="fas fa-check-circle me-2"></i> Crear Partido
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left me-1"></i> Volver al listado
            </a>
        </div>
    </div>
</div>

<!-- VALIDACIÓN -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- ESTILOS -->
<style>
    .create-btn {
        background: linear-gradient(to right, #ffecd2, #fcb69f);
        color: #1f3c88;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .create-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #fcb69f, #ffecd2);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
