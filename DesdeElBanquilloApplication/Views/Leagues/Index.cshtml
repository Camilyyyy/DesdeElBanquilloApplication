@model IEnumerable<DesdeElBanquilloApplication.ViewModels.LeagueViewModel>

@{
    ViewData["Title"] = "Ligas";
}

<h1>Ligas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.CountryName)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@(item.IsActive ? "Sí" : "No")</td>
                <td>@Html.DisplayFor(modelItem => item.CountryName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdLeague" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdLeague" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdLeague" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>