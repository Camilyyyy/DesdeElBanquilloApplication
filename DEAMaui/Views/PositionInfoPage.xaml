<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             x:DataType="viewmodel:PositionInfoViewModel"
             x:Class="DEAMaui.Views.PositionInfoPage"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="25">
            <Frame Padding="20" CornerRadius="10" BorderColor="LightGray" HasShadow="True">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" ColumnSpacing="15">
                    <Label Grid.Row="0" Grid.Column="0" Text="Nombre:" FontAttributes="Bold" FontSize="Medium"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Position.Name}" FontSize="Medium"/>
                </Grid>
            </Frame>
            <Button Text="Volver" Command="{Binding GoBackCommand}" Margin="0,30,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>