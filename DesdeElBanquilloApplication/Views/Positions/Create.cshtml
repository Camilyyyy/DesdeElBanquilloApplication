@model DEAModels.Position

@{
    ViewData["Title"] = "Crear Posición";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #b2fefa, #f9f9f9, #fbc2eb);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Crear Posición
</h1>

<!-- FORMULARIO -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-4">
                <label asp-for="Name" class="form-label">Nombre de la Posición</label>
                <input asp-for="Name" class="form-control" style="border-radius: 8px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="create-btn">
                    <i class="fas fa-check-circle me-2"></i> Crear Posición
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left me-1"></i> Volver al listado</a>
        </div>
    </div>
</div>

<!-- VALIDACIONES -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- ESTILOS -->
<style>
    .create-btn {
        background: linear-gradient(to right, #ffecd2, #fcb69f);
        color: #1f3c88;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .create-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #fcb69f, #ffecd2);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
