<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             xmlns:model="clr-namespace:DEAModels;assembly=DEAModels"
             x:DataType="viewmodel:CountriesViewModel"
             x:Class="DEAMaui.Views.Country.CountriesPage"
             Title="{Binding Title}">

    <!-- Barra de herramientas con botón para Añadir -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Añadir" Command="{Binding GoToDetailsCommand}" CommandParameter="{x:Null}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*,Auto" ColumnDefinitions="*">
        <!-- Indicador de Carga para la carga inicial -->
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"
                           HorizontalOptions="Center" VerticalOptions="Center"
                           Grid.RowSpan="2" Grid.Column="0" />

        <!-- Usamos RefreshView para envolver el CollectionView -->
        <!-- Esto nos da la funcionalidad de "deslizar para refrescar" -->
        <RefreshView Command="{Binding GetCountriesCommand}" 
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="Red"
                     Grid.Row="0" Grid.Column="0">

            <CollectionView ItemsSource="{Binding Countries}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No se encontraron países. Desliza hacia abajo para refrescar."
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Country">
                        <Grid Padding="10">
                            <Frame Padding="15" CornerRadius="8" HasShadow="True" BorderColor="LightGray">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CountriesViewModel}}, Path=GoToDetailsCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Label Text="{Binding Name}" FontSize="Medium" VerticalOptions="Center"/>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </RefreshView>

        <!-- Botón para Refrescar (se mantiene como una alternativa) -->
        <Button Text="Refrescar Lista" 
                Command="{Binding GetCountriesCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="1" Grid.Column="0" 
                Margin="10"/>
    </Grid>
</ContentPage>