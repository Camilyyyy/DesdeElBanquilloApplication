<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             x:DataType="viewmodel:LeagueDetailViewModel"
             x:Class="DEAMaui.Views.LeagueDetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="Nombre de la Liga"/>
            <Frame Padding="10,0" CornerRadius="5" BorderColor="LightGray">
                <Entry Text="{Binding League.Name}" Placeholder="Ej. La Liga"/>
            </Frame>

            <Label Text="Fecha de Creación"/>
            <DatePicker Date="{Binding League.CreatedDate}"/>

            <Grid ColumnDefinitions="*,Auto" Padding="5,10">
                <Label Text="Liga Activa" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding League.IsActive}" Grid.Column="1"/>
            </Grid>

            <Label Text="País"/>
            <Frame Padding="5" CornerRadius="5" BorderColor="LightGray">
                <Picker Title="Selecciona un país"
                        ItemsSource="{Binding Countries}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedCountry}"/>
            </Frame>

            <Button Text="Guardar" Command="{Binding SaveCommand}" IsEnabled="{Binding IsNotBusy}" Margin="0,20,0,0"/>
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>