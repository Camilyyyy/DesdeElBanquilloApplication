<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             x:DataType="viewmodel:PlayerInfoViewModel"
             x:Class="DEAMaui.Views.PlayerInfoPage"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="25">
            <Frame Padding="20" CornerRadius="10" BorderColor="LightGray" HasShadow="True">

                <!-- INICIO DE LA CORRECCIÓN: Se añaden las RowDefinitions -->
                <Grid ColumnDefinitions="Auto,*" 
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                      RowSpacing="10" ColumnSpacing="15">
                    <!-- FIN DE LA CORRECCIÓN -->

                    <Label Grid.Row="0" Grid.Column="0" Text="Nombre:" FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Player.Name}"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Equipo:" FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Player.Team.Name}"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Posición:" FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Player.Position.Name}"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="País:" FontAttributes="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding Player.Country.Name}"/>

                    <Label Grid.Row="4" Grid.Column="0" Text="Dorsal:" FontAttributes="Bold"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding Player.JerseyNumber}"/>

                    <Label Grid.Row="5" Grid.Column="0" Text="Edad:" FontAttributes="Bold"/>
                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding Player.Age}"/>
                </Grid>
            </Frame>
            <Button Text="Volver" Command="{Binding GoBackCommand}" Margin="0,30,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>