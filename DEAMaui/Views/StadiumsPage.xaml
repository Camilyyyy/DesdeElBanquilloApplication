<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             xmlns:model="clr-namespace:DEAModels;assembly=DEAModels"
             x:DataType="viewmodel:StadiumsViewModel"
             x:Class="DEAMaui.Views.StadiumsPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Añadir" Command="{Binding GoToEditPageCommand}" CommandParameter="{x:Null}" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="*,Auto" ColumnDefinitions="*">
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" Grid.RowSpan="2" HorizontalOptions="Center" VerticalOptions="Center" />
        <RefreshView Command="{Binding GetStadiumsCommand}" IsRefreshing="{Binding IsBusy}" RefreshColor="Red" Grid.Row="0">
            <CollectionView ItemsSource="{Binding Stadiums}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Stadium">
                        <Grid x:Name="ItemContainer" Padding="10">
                            <Frame Padding="15" CornerRadius="8" HasShadow="True" BorderColor="LightGray">
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Editar" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:StadiumsViewModel}}, Path=GoToEditPageCommand}" CommandParameter="{Binding Source={x:Reference ItemContainer}, Path=BindingContext}"/>
                                        <MenuFlyoutItem Text="Ver Información" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:StadiumsViewModel}}, Path=GoToInfoPageCommand}" CommandParameter="{Binding Source={x:Reference ItemContainer}, Path=BindingContext}"/>
                                        <MenuFlyoutSeparator />
                                        <MenuFlyoutItem Text="Eliminar" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:StadiumsViewModel}}, Path=DeleteStadiumCommand}" CommandParameter="{Binding Source={x:Reference ItemContainer}, Path=BindingContext}" />
                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold"/>
                                    <Label Text="{Binding Team.Name}" FontSize="Small" TextColor="Gray"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <Button Text="Refrescar Lista" Command="{Binding GetStadiumsCommand}" IsEnabled="{Binding IsNotBusy}" Grid.Row="1" Margin="10"/>
    </Grid>
</ContentPage>