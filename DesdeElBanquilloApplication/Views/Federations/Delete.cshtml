@model DEAModels.Federation

@{
    ViewData["Title"] = "Eliminar Federación";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #ffdde1, #f7bb97);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Eliminar Federación
</h1>

<!-- MENSAJE DE CONFIRMACIÓN -->
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="alert alert-warning text-center mb-4" role="alert" style="border-radius: 10px;">
            ¿Estás seguro de que deseas eliminar esta federación?
        </div>

        <div class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Acronym)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Acronym)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EstablishedDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EstablishedDate)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Country)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Country.Name)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="IdFederation" />

                <button type="submit" class="btn-delete">
                    <i class="fas fa-trash-alt me-2"></i> Eliminar
                </button>

                <a asp-action="Index" class="back-link ms-3">
                    <i class="fas fa-arrow-left me-1"></i> Volver al listado
                </a>
            </form>
        </div>
    </div>
</div>

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .btn-delete {
        background: linear-gradient(to right, #ff758c, #ff7eb3);
        color: white;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .btn-delete:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #ff7eb3, #ff758c);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }

    .fw-bold {
        font-weight: 600;
    }
</style>
