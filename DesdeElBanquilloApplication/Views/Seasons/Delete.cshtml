@model DEAModels.Season

@{
    ViewData["Title"] = "Eliminar Temporada";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #ffdde1, #f9f9f9, #c3cfe2);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Eliminar Temporada
</h1>

<!-- CONFIRMACIÓN -->
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <h5 class="text-danger text-center mb-3">¿Estás seguro de que deseas eliminar esta temporada?</h5>

            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Fecha de Inicio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-4">Fecha de Fin</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>

                <dt class="col-sm-4">¿Es Actual?</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IsCurrent)</dd>

                <dt class="col-sm-4">Total de Jornadas</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalMatchdays)</dd>

                <dt class="col-sm-4">Liga</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.League.Name)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="IdSeason" />
                <button type="submit" class="delete-btn">
                    <i class="fas fa-trash-alt me-2"></i> Eliminar
                </button>
                <a asp-action="Index" class="back-link ms-3">
                    <i class="fas fa-arrow-left me-1"></i> Volver al listado
                </a>
            </form>
        </div>
    </div>
</div>

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .delete-btn {
        background: linear-gradient(to right, #f5576c, #f093fb);
        color: white;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .delete-btn:hover {
            background: linear-gradient(to right, #f093fb, #f5576c);
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
