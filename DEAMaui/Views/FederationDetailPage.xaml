<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DEAMaui.ViewModels"
             x:DataType="viewmodel:FederationDetailViewModel"
             x:Class="DEAMaui.Views.FederationDetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="Nombre de la Federación"/>
            <Frame Padding="10,0" CornerRadius="5" BorderColor="LightGray">
                <Entry Text="{Binding Federation.Name}" Placeholder="Ej. RFEF"/>
            </Frame>

            <Label Text="Acrónimo"/>
            <Frame Padding="10,0" CornerRadius="5" BorderColor="LightGray">
                <Entry Text="{Binding Federation.Acronym}" Placeholder="Ej. FEF"/>
            </Frame>

            <Label Text="Fecha de Fundación"/>
            <DatePicker Date="{Binding Federation.EstablishedDate}"/>

            <!-- Picker para seleccionar el País -->
            <Label Text="País"/>
            <Frame Padding="5" CornerRadius="5" BorderColor="LightGray">
                <Picker Title="Selecciona un país"
            ItemsSource="{Binding Countries}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding SelectedCountry}"/>

            </Frame>

            <Button Text="Guardar" Command="{Binding SaveCommand}" IsEnabled="{Binding IsNotBusy}" Margin="0,20,0,0"/>
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>