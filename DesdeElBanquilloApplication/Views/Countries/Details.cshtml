@model DEAModels.Country

@{
    ViewData["Title"] = "Detalles del País";
}

<!-- TÍTULO CON DEGRADADO -->
<h1 class="text-center mb-4" style="
    background: linear-gradient(to right, #fbc2eb, #f9f9f9, #b2fefa);
    color: #333;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
">
    Detalles del País
</h1>

<!-- CONTENIDO DETALLADO -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="p-4 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
            <dl class="row mb-0">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>

        <!-- ACCIONES -->
        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.IdCountry" class="edit-btn me-2">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            <a asp-action="Index" class="back-link">
                <i class="fas fa-arrow-left me-1"></i> Volver al listado
            </a>
        </div>
    </div>
</div>

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .edit-btn {
        background: linear-gradient(to right, #d4fc79, #96e6a1);
        color: #1f3c88;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        text-decoration: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .edit-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #96e6a1, #d4fc79);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .back-link {
        text-decoration: none;
        color: #1f3c88;
        font-weight: 500;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #0d2c6e;
            text-decoration: underline;
        }
</style>
